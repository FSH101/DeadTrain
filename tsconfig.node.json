{
  "compilerOptions": {
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": [
      "node"
    ],
    "outDir": "dist/server",
    "noEmit": false
  },
  "include": [
    "vite.config.ts",
    "api/**/*",
    "scripts/**/*"
  ]
}